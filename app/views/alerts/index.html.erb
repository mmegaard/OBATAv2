<h1>Listing alerts</h1>

<table>
  <tr>
    <th>Agency</th>
    <th>Route</th>
    <th>Details</th>
    <th>Start</th>
    <th>End</th>
    <th>Retrieved</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @alerts.each do |alert| %>
  <tr>
    <td><%= alert.agency %></td>
    <td><%= alert.route %></td>
    <td><%= alert.details %></td>
    <td><%= alert.start %></td>
    <td><%= alert.end %></td>
    <td><%= alert.retrieved %></td>
    <td><%= link_to 'Show', alert %></td>
    <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
    <td><%= link_to 'Destroy', alert, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

